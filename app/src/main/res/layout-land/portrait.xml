<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraitLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_info1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="120dp"
            android:backgroundTint="@color/btn_info"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_info1"
            android:textStyle="bold"
            app:cornerRadius="5dp" />

        <TextView
            android:id="@+id/lbl_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="120dp"
            android:fontFamily="@font/aclonica"
            android:textAlignment="textStart"
            android:textColor="@color/lbl_info"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_info3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/btn_info"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_info3"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btn_info2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="120dp"
            android:backgroundTint="@color/btn_info"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_info2"
            android:textStyle="bold"
            app:cornerRadius="5dp" />

        <TextView
            android:id="@+id/lbl_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:fontFamily="@font/aclonica"
            android:textAlignment="textStart"
            android:textColor="@color/lbl_info"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lbl_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:textAlignment="textStart"
            android:textColor="@color/lbl_info"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/btn_clear"
            android:fontFamily="@font/aldrich"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_clear"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>